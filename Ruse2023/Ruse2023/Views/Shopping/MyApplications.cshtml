@using Ruse2023.Models.Shopping;
@model List<ShoppingApprovalModel>

<!DOCTYPE html>
<head>
    <title>Bootstrap Card</title>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js">
    </script>
</head>
<html lang="en">

<body>
    <div class="container">
        <div style="display: inline-block; width: 100%;">
            @foreach (var app in Model)
            {
                <div style="display: inline-block; margin: 0; padding: 0;">
                    <div class="card" style="width:200px">
                        <div class="card-body">
                            <h4 class="card-title"></h4>
                            <p class="card-text">
                                @app.Description
                            </p>

                            <a asp-action="ApplicationDetails" asp-controller="TreePlant" asp-route-id="@app.Id" class="btn btn-primary">
                                Details
                            </a>
                        </div>
                        <img class="card-img-bottom" src="@app.Image"
                         alt="Card image" style="width:100%; height: 200px">
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>

