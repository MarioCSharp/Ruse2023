@using Ruse2023.Models.Account;
@{
    Layout = "";
}
@model UserDisplayModel


<head>
    <meta charset="UTF-8">
    <title>CodePen - Contact Us</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://demo.voidcoders.com/htmldemo/fitgear/main-files/assets/css/animate.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/treeplantCss.css">
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
</head>

<body>
    <header id="header" class="alt">
        <h1><a href="index.html">EcoWay</a></h1>
        <nav id="nav">
            <ul>
                <li class="special">
                    <a href="#menu" class="menuToggle"><span>Menu</span></a>
                    <div id="menu">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-action="Index" asp-controller="Store">Магазин</a></li>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a asp-action="Register" asp-controller="Account">Sign Up</a></li>
                                <li><a asp-action="Login" asp-controller="Account">Log In</a></li>
                            }
                            else
                            {
                                <li><a asp-action="Profile" asp-controller="Account">Account</a></li>
                                <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
                            }
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
    </header>

    <section style="background-color: #495057;">
        <div class="container py-5">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 style="color: black" class="my-3">@Model.FirstName @Model.LastName</h5>
                            <p style="color: black" class="text-muted mb-1">Full Stack Developer</p>
                            <p style="color: black" class="text-muted mb-4">Bay Area, San Francisco, CA</p>
                        </div>
                    </div>
                    <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                               
                            </ul>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p style="color: black" class="mb-0">Full Name</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.FirstName @Model.LastName</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p style="color: black" class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Email</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p style="color: black" class="mb-0">Phone</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.PhoneNumber</p>
                                </div>
                            </div>
                            <hr>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p style="color: black" class="mb-0">Birth Date</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.BirthDate</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (User.IsInRole("Moderator") || User.IsInRole("Administrator"))
                        {
                        <div class="col-md-6">
                            
                           

                                <div class="card mb-4 mb-md-0">
                                    <div class="card-body">


                                        <a asp-action="Applications" asp-controller="TreePlant" class="btn btn-success btn-space">All TreePlant applications</a>
                                        <a asp-action="Applications" asp-controller="Shopping" class="btn btn-success btn-space">All Shopping applications</a>
                                        <a asp-action="Applications" asp-controller="Administrator" class="btn btn-success btn-space">All Moderator applications</a>

                                    </div>
                                </div>
                           
                        </div>
                        }
                        <div class="col-md-6">
                            <div class="card mb-4 mb-md-0">
                                <div class="card-body">
                                    <a asp-action="MyApplications" asp-controller="TreePlant" class="btn btn-success btn-space">My TreePlant applications</a>
                                    <a asp-action="MyApplications" asp-controller="Shopping" class="btn btn-success btn-space">My Shopping applications</a>
                                    <a asp-action="MyApplications" asp-controller="Moderator" class="btn btn-success btn-space">My Moderator applications</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/jquery.scrollex.min.js"></script>
    <script src="~/assets/js/jquery.scrolly.min.js"></script>
    <script src="~/assets/js/browser.min.js"></script>
    <script src="~/assets/js/breakpoints.min.js"></script>
    <script src="~/assets/js/util.js"></script>
    <script src="~/assets/js/main.js"></script>
</body>

<style>
    .btn-space {
        margin-top: 10px; /* Adjust this value as needed */
    }
</style>
